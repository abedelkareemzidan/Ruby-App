<h1>New Tag</h1>

<%= form_with model: @tag do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
    <% @tag.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :username %><br>
    <%= form.text_area :username %><br>
    <% @tag.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

   <div>
    <%= form.label :password %><br>
    <%= form.text_area :password %><br>
    <% @tag.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>