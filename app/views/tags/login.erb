<h1>login</h1>

<%= form_with model: @tag do |form| %>
   <div>
    <%= form.label :username %><br>
    <%= form.text_area :username %><br>
    <% @tag.errors.full_messages_for(:username).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

   <div>
    <%= form.label :password %><br>
    <%= form.text_area :password %><br>
    <% @tag.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
 <%= form.submit %>
  <div>
  </div>

<% end %>